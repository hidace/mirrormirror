  <div class="feed-me" style="z-index:99;width:100%;height:400px;background-color:black;position:fixed;">
  <div class="responsive-object" style="height:375px;position:absolute;width:400px;left:43%;margin-left:-100px">
  </div>
  </div>
<!--   <div style="height:400px; background-color: blue;position:fixed;top:0; width:100%; left:0;"></div>
 -->
  <div style="margin-top:400px;">
  <div class="col-xs-1 main"></div>  
  <div class="col-xs-10 main">  
  
    <p>
    <table>
      <tr>
        <td>&nbsp;</td> 
        <td><strong>SONG</strong></td>
        <td><strong>ARTIST</strong></td>
        <td><strong>ALBUM</strong></td>
        <td><strong>PLAYS</strong></td>
      </tr>
      <% @songs.each do |song| %>
        <tr class="song-row">
          <td>
            <a href="/users/<%= @user.id %>/play/<%= song.id %>" data-remote="true"><%= image_tag('icons/play.png', class: 'play') %></a>
          </td>
          <td>
            <a href="#"><%= truncate(song.name, length: 40) %></a>
          </td>
          <td>
            <%= truncate(song.album.artist.name, length: 40) %>
          </td>
          <td>
            <%= truncate(song.album.name, length: 25) %>
          </td>
          <td>
            <center><%= song.user_songs.first.play_count %></center>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
  </div>
  <div class="col-xs-1 main"></div>  
