<div class="container">
  <div class="col-xs-1 main"></div>  

  <div class="col-xs-10 main">  
    <h1 id="welcome">Welcome <%= @user.name %></h1>
    <div id="player"></div>
    <p>
    <table>
      <tr>
        <td>&nbsp;</td> 
        <td><strong>SONG</strong></td>
        <td><strong>ARTIST</strong></td>
        <td><strong>ALBUM</strong></td>
        <td><strong>PLAYS</strong></td>
      </tr>
      <% @songs.each do |song| %>
        <tr class="song-row">
          <td><a href="/users/<%= @user.id %>/play/<%= song.id %>" data-remote="true"><%= image_tag('icons/play.png', class: 'play') %></a></td>
          <td><a href="#"><%= truncate(song.name, length: 40) %></a></td>
          <td><%= truncate(song.album.artist.name, length: 40) %></td>
          <td><%= truncate(song.album.name, length: 25) %></td>
          <!-- PLAY COUNT PLACE HOLDER FOR WHEN MODEL IS ADJUSTED -->
          <td><center><%= song.play_count %></center></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="col-xs-1 main"></div>  
<script async src="//cdn.embedly.com/widgets/platform.js" charset="UTF-8"></script>
</div>
